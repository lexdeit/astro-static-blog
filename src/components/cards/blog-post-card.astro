---
interface Props {
    imageSrc?: string;
    title?: string;
    date?: string;
    postHref?: string;
}

const { imageSrc, title, date, postHref } = Astro.props;
---

<div class="lg:flex hover:cursor-pointer border border-neutral-900 p-4 rounded-xl">
    <img
        class="object-cover w-full h-56 rounded-lg lg:w-64"
        src={imageSrc}
        alt={title}
    />

    <div class="flex flex-col justify-between py-6 lg:mx-6">
        <a
            href={postHref}
            class="text-xl font-semibold text-gray-800 hover:underline dark:text-white"
        >
            {title}
        </a>

        <span class="text-sm text-gray-500 dark:text-gray-300">{date}</span>
    </div>
</div>
