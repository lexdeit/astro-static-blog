---
import { getCollection } from "astro:content";
import { siteConfig } from "src/config/site-config";
import MainLayout from "src/layouts/main-layout.astro";
import AuthorProfileCard from "src/components/cards/author-profile-card.astro";

const authors = await getCollection("author");
---

<MainLayout title="Listado de autores">
    <section class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-bold text-white">{siteConfig.title}</h1>
    </section>
    <section class="grid grid-cols-1 sm:grid-cols-3 gap-x-2 gap-y-2">
        {authors.map((author) => <AuthorProfileCard author={author} />)}
    </section>
</MainLayout>
