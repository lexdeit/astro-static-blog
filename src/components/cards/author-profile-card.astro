---
import type { CollectionEntry } from "astro:content";

interface Props {
    author: CollectionEntry<"author">;
}

const { author } = Astro.props;
const { name, avatar, bio, github, linkedIn, subtitle, twitter } = author.data;
---

<div
    class="max-w-lg mx-auto bg-white dark:bg-neutral-900 rounded-lg shadow-md p-5"
>
    <img
        class="size-32 rounded-full mx-auto"
        src=`${avatar.src}`
        alt="Profile picture"
    />
    <h2 class="text-center text-2xl dark:text-white font-semibold mt-3">
        {name}
    </h2>
    <p class="text-center text-gray-600 dark:text-neutral-300 mt-1">
        {subtitle}
    </p>
    <div class="flex justify-center mt-5">
        <a href=`${twitter}` class="text-blue-500 hover:text-blue-700 mx-3"
            >Twitter</a
        >
        <a href=`${linkedIn}` class="text-blue-500 hover:text-blue-700 mx-3"
            >LinkedIn</a
        >
        <a href=`${github}` class="text-blue-500 hover:text-blue-700 mx-3"
            >GitHub</a
        >
    </div>
    <div class="mt-5">
        <h3 class="text-xl font-semibold dark:text-white">Bio</h3>
        <p class="text-gray-600 dark:text-neutral-300 mt-2">
            {bio}
        </p>
        <div>
            <a href=`/blog/${author.id}` class="text-blue-500 hover:text-blue-700">Leer mas</a>
        </div>
    </div>
</div>
