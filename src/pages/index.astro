---
import { getCollection } from "astro:content";
import { siteConfig } from "../config/site-config";
import MainLayout from "../layouts/main-layout.astro";
import TypeBlogPost from "../components/cards/type-blog-post.astro";

const { title, description } = siteConfig;

const blogPosts = await getCollection("blog");
---

<MainLayout title={title}>
    <!-- component -->
    <section class="">
        <div class="container px-6 py-10 mx-auto">
            <h1
                class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
            >
                {title}
            </h1>
            <a href="/blog/1" class="hover:underline text-neutral-600">Blog paginado</a>
            <div class="grid grid-cols-1 gap-4 mt-8 md:mt-16 md:grid-cols-2">
                {blogPosts.map((post) => <TypeBlogPost post={post} />)}
            </div>
        </div>
    </section>
</MainLayout>
